{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "build",
    },
    "include": [
        "lib/**/*",
        "bin/**/*",
        "types/*",
        "config.ts",
    ]
}