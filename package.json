{
  "name": "mtg-bot",
  "version": "1.0.0",
  "description": "A Discord bot for playing a Magic: The Gathering game inspired by Wordle",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "build": "rm -rf build/ && tsc",
    "start": "node build/lib/main.js",
    "dev": "npm run build && npm start",
    "register": "npm run build && node build/bin/register-commands.js",
    "delete": "npm run build && node build/bin/delete-commands.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FilipeLarga/mtg-bot.git"
  },
  "keywords": [
    "MTG",
    "Magic",
    "Cards",
    "Discord",
    "Bot"
  ],
  "author": "Filipe Larga",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/FilipeLarga/mtg-bot/issues"
  },
  "homepage": "https://github.com/FilipeLarga/mtg-bot#readme",
  "dependencies": {
    "@discordjs/rest": "^1.0.1",
    "discord.js": "^14.3.0"
  },
  "devDependencies": {
    "@types/node": "^18.7.9",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "typescript": "^4.7.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  }
}
